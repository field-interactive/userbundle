{% extends '@FieldUser/base.html.twig' %}

{% block body %}
    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    <form action="{{ path('login') }}" method="post">
        <label for="email">Email:</label>
        <input type="email" id="email" name="_username" value="{{ last_username }}" />

        <label for="password">Password:</label>
        <input type="password" id="password" name="_password" />

        <input type="checkbox" id="remember_me" name="_remember_me" checked />
        <label for="remember_me">Keep me logged in</label>

        <input type="submit" value="Login" />
    </form>
    <ul>
        <li><a href="{{ path('registration_register') }}">Sign up</a></li>
        <li><a href="{{ path('resetting_password_request') }}">Forgot password?</a></li>
    </ul>
{% endblock %}